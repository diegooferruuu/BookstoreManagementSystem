@page
@using ServiceClients.Application.Services
@using ServiceClients.Domain.Interfaces
@using ServiceDistributors.Domain.Interfaces
@using ServiceProducts.Application.Services
@using ServiceDistributors.Application.Services
@using ServiceProducts.Domain.Interfaces
@model LibraryWeb.Pages.IndexModel
@inject IClientService ClientService
@inject IProductService ProductService
@inject IDistributorService DistributorService

@{
    ViewData["Title"] = "Inicio";
    int clientes = 0, productos = 0, distribuidores = 0;

    if (User.Identity?.IsAuthenticated == true)
    {
        clientes = ClientService.GetAll().Count;
        productos = ProductService.GetAll().Count;
        distribuidores = DistributorService.GetAll().Count;
    }
}

@if (User.Identity?.IsAuthenticated != true)
{
    <div class="text-center mt-5">
        <h1 class="display-4 fw-bold text-primary">Sistema de Administración de Librería</h1>
        <p class="lead text-muted">
            Bienvenido al sistema de gestión de la librería — Arquitectura orientada a servicios.
        </p>
        <a asp-page="/Auth/Login" class="btn btn-primary btn-lg mt-3">
            <i class="fas fa-sign-in-alt me-2"></i>Iniciar sesión
        </a>
    </div>
}
else
{
    <section class="py-5 bg-light">
        <div class="container">
            <h2 class="text-center fw-bold mb-5 text-primary">Estadísticas Generales</h2>
            <div class="row g-4 justify-content-center">

                <div class="col-md-4 col-sm-6">
                    <div class="card shadow-lg border-0 text-center p-4 stat-card">
                        <div class="icon-circle bg-info bg-opacity-10 text-info mx-auto mb-3">
                            <i class="fas fa-users fa-2x"></i>
                        </div>
                        <h5 class="fw-semibold text-dark">Clientes</h5>
                        <h3 class="fw-bold">@clientes</h3>
                        <p class="text-muted small mb-0">Registrados en el sistema</p>
                    </div>
                </div>

                <div class="col-md-4 col-sm-6">
                    <div class="card shadow-lg border-0 text-center p-4 stat-card">
                        <div class="icon-circle bg-success bg-opacity-10 text-success mx-auto mb-3">
                            <i class="fas fa-book fa-2x"></i>
                        </div>
                        <h5 class="fw-semibold text-dark">Productos</h5>
                        <h3 class="fw-bold">@productos</h3>
                        <p class="text-muted small mb-0">Disponibles en catálogo</p>
                    </div>
                </div>

                <div class="col-md-4 col-sm-6">
                    <div class="card shadow-lg border-0 text-center p-4 stat-card">
                        <div class="icon-circle bg-warning bg-opacity-10 text-warning mx-auto mb-3">
                            <i class="fas fa-truck fa-2x"></i>
                        </div>
                        <h5 class="fw-semibold text-dark">Distribuidores</h5>
                        <h3 class="fw-bold">@distribuidores</h3>
                        <p class="text-muted small mb-0">Proveedores asociados</p>
                    </div>
                </div>

            </div>
        </div>
    </section>
}

<style>
    .stat-card {
        transition: transform 0.25s ease, box-shadow 0.25s ease;
        border-radius: 1rem;
        background: white;
    }

        .stat-card:hover {
            transform: translateY(-6px);
            box-shadow: 0 10px 25px rgba(0,0,0,0.1);
        }

    .icon-circle {
        width: 75px;
        height: 75px;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 50%;
    }
</style>
