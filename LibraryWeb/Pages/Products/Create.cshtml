@page
@model LibraryWeb.Pages.Products.CreateModel
@{
    ViewData["Title"] = "Añadir Producto";
}

<div class="card shadow-custom">
    <div class="card-header card-header-blue d-flex align-items-center">
        <h5 class="mb-0"><i class="fas fa-plus me-2"></i>Añadir Producto</h5>
    </div>
    <div class="card-body">
        <form method="post">
            <div class="mb-3">
                <label class="form-label">Nombre</label>
                <input asp-for="Product.Name" class="form-control"
                       data-val="true"
                       data-val-required="El nombre es obligatorio."
                       data-val-productname="true"
                       data-val-length="El nombre no debe superar 80 caracteres."
                       data-val-length-max="80" />
                <span asp-validation-for="Product.Name" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">Categoría</label>
                <select asp-for="Product.CategoryId" class="form-select" asp-items="Model.Categories"></select>
                <span asp-validation-for="Product.CategoryId" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">Descripción</label>
                <input asp-for="Product.Description" class="form-control"
                       data-val="true"
                       data-val-required="La descripción es obligatoria."
                       data-val-productdesc="true"
                       data-val-length="La descripción no debe superar 120 caracteres."
                       data-val-length-max="120" />
                <span asp-validation-for="Product.Description" class="text-danger"></span>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label class="form-label">Precio</label>
                    <input asp-for="Product.Price" class="form-control" type="number" step="0.01" min="0.01"
                           data-val="true" data-val-number="Ingrese un número válido."
                           data-msg-min="El precio debe ser mayor a 0." />
                    <span asp-validation-for="Product.Price" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label class="form-label">Stock</label>
                    <input asp-for="Product.Stock" class="form-control" type="number" min="0" step="1"
                           data-val="true" data-val-number="Ingrese un número válido." data-val-min="El stock no puede ser negativo." data-val-min-min="0" />
                    <span asp-validation-for="Product.Stock" class="text-danger"></span>
                </div>
            </div>

            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-primary"><i class="fas fa-save me-1"></i>Crear</button>
                <a asp-page="Index" class="btn btn-secondary"><i class="fas fa-times me-1"></i>Cancelar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
