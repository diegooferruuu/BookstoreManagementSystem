@page
@model LibraryWeb.Pages.Products.ReportModel
@{
    ViewData["Title"] = "Reporte de Productos";
}

<div class="card p-4 shadow-sm mt-3">
    <h4 class="text-primary mb-4">
        <i class="fas fa-file-alt me-2"></i>Generar Reporte de Productos
    </h4>

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger">@Model.ErrorMessage</div>
    }

    <form method="post" asp-page-handler="Download">
        <div class="row g-3">
            <div class="col-md-3">
                <label asp-for="PriceMin" class="form-label fw-semibold">Precio desde</label>
                <input asp-for="PriceMin" class="form-control" type="number" step="0.01" min="0" />
                <span asp-validation-for="PriceMin" class="text-danger small"></span>
            </div>

            <div class="col-md-3">
                <label asp-for="PriceMax" class="form-label fw-semibold">Precio hasta</label>
                <input asp-for="PriceMax" class="form-control" type="number" step="0.01" min="0" />
                <span asp-validation-for="PriceMax" class="text-danger small"></span>
            </div>

            <div class="col-md-4">
                <label asp-for="Format" class="form-label fw-semibold">Formato</label>
                <select asp-for="Format" class="form-select">
                    <option value="pdf">PDF</option>
                    <option value="xlsx">Excel</option>
                </select>
                <span asp-validation-for="Format" class="text-danger small"></span>
            </div>

            <div class="col-md-2 d-flex align-items-end">
                <button type="submit" class="btn btn-primary w-100">
                    <i class="fas fa-download me-2"></i>Generar
                </button>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
