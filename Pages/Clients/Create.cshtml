@page
@model BookstoreManagementSystem.Pages.Clients.CreateModel
@{
    ViewData["Title"] = "Añadir Cliente";
}

<h1>Add Cliente</h1>

<form method="post">
    <div class="mb-3">
        <label class="form-label">First Name</label>
        <input asp-for="Client.FirstName" class="form-control" />
    </div>
    <div class="mb-3">
        <label class="form-label">Last Name</label>
        <input asp-for="Client.LastName" class="form-control" />
    </div>
    <div class="mb-3">
        <label class="form-label">Middle Name</label>
        <input asp-for="Client.MiddleName" class="form-control" />
    </div>
    <div class="mb-3">
        <label class="form-label">Email</label>
        <input asp-for="Client.Email" class="form-control" />
    </div>
    <div class="mb-3">
        <label class="form-label">Teléfono</label>
        <input asp-for="Client.Phone" class="form-control" />
    </div>
    <div class="mb-3">
        <label class="form-label">Dirección</label>
        <input asp-for="Client.Address" class="form-control" />
    </div>
    <button type="submit" class="btn btn-success">Save</button>
    <a asp-page="Index" class="btn btn-secondary">Cancel</a>
</form>
