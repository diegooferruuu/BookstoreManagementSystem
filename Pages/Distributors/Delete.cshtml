@page "{id:int}"
@model BookstoreManagementSystem.Pages.Distributors.DeleteModel
@{
    ViewData["Title"] = "Eliminar Distribuidor";
}

<h1>Eliminar Distribuidor</h1>

<div class="alert alert-danger mt-3">
    <h5>Estas seguro que quieres eliminar este distribuidor?</h5>
</div>

<div class="border rounded p-3 bg-light">
    <p><strong>ID:</strong> @Model.Distributor.Id</p>
    <p><strong>Nombre:</strong> @Model.Distributor.Name</p>
    <p><strong>Correo:</strong> @Model.Distributor.ContactEmail</p>
    <p><strong>Telefono:</strong> @Model.Distributor.Phone</p>
    <p><strong>Direccion:</strong> @Model.Distributor.Address</p>
</div>

<form method="post" class="mt-3">
    <input type="hidden" asp-for="Distributor.Id" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-page="Index" class="btn btn-secondary">Cancelar</a>
</form>
