@page
@model BookstoreManagementSystem.Pages.Distributors.IndexModel
@{
    ViewData["Title"] = "Distributors";
}

<h1>Distributors</h1>

<table class="table table-striped table-bordered mt-3">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Address</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var distributor in Model.Distributors)
        {
            <tr>
                <td>@distributor.Id</td>
                <td>@distributor.Name </td>
                <td>@distributor.ContactEmail</td>
                <td>@distributor.Phone</td>
                <td>@distributor.Address</td>
                <td>
                    <a class="btn btn-warning btn-sm" asp-page="Edit" asp-route-id="@distributor.Id">Edit</a>
                    <a class="btn btn-danger btn-sm" asp-page="Delete" asp-route-id="@distributor.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-page="Create" class="btn btn-primary mt-3">Add Distributors</a>
