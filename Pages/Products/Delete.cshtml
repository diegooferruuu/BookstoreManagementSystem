@page
@model BookstoreManagementSystem.Pages.Products.DeleteModel
@{
    ViewData["Title"] = "Delete Product";
}

<h1>Delete Product</h1>

<div class="alert alert-warning">
    <h3>Are you sure you want to delete this product?</h3>
    <p>This action cannot be undone.</p>
</div>

<div class="card">
    <div class="card-header">
        <h4>Product Details</h4>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">ID:</dt>
            <dd class="col-sm-9">@Model.Product.Id</dd>
            
            <dt class="col-sm-3">Name:</dt>
            <dd class="col-sm-9">@Model.Product.Name</dd>
            
            <dt class="col-sm-3">Description:</dt>
            <dd class="col-sm-9">@Model.Product.Description</dd>
            
            <dt class="col-sm-3">Category:</dt>
            <dd class="col-sm-9">@Model.Product.CategoryName</dd>
            
            <dt class="col-sm-3">Price:</dt>
            <dd class="col-sm-9">@Model.Product.Price.ToString("C")</dd>
            
            <dt class="col-sm-3">Stock:</dt>
            <dd class="col-sm-9">@Model.Product.Stock</dd>
            
            <dt class="col-sm-3">Creation Date:</dt>
            <dd class="col-sm-9">@Model.Product.CreatedAt.ToString("dd/MM/yyyy HH:mm")</dd>
        </dl>
    </div>
</div>

