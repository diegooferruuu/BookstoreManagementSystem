@page
@model BookstoreManagementSystem.Pages.Products.IndexModel
@{
    ViewData["Title"] = "Productos";
}

<h1>Productos</h1>

<div class="mb-3">
    <a asp-page="Create" class="btn btn-primary">Añadir Producto</a>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nombre</th>
            <th>Descripción</th>
            <th>Categoría</th>
            <th>Precio</th>
            <th>Stock</th>
            <th>Fecha de Creación</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model.Products)
        {
            <tr>
                <td>@product.Id</td>
                <td>@product.Name</td>
                <td>@product.Description</td>
                <td>@product.CategoryName</td>
                <td>@product.Price.ToString("C")</td>
                <td>@product.Stock</td>
                <td>@product.CreatedAt.ToString("dd/MM/yyyy")</td>
                <td>
                    <a asp-page="Edit" asp-route-id="@product.Id" class="btn btn-sm btn-warning">Editar</a>
                    <a asp-page="Delete" asp-route-id="@product.Id" class="btn btn-sm btn-danger">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@if (!Model.Products.Any())
{
    <div class="alert alert-info">
        No hay productos registrados.
    </div>
}