@page "{id:int}"
@model BookstoreManagementSystem.Pages.Clients.DeleteModel
@{
    ViewData["Title"] = "Eliminar Cliente";
}

<h1>Eliminar Cliente</h1>

<div class="alert alert-danger mt-3">
    <h5>¿Estás seguro de eliminar este cliente?</h5>
</div>

<div class="border rounded p-3 bg-light">
    <p><strong>ID:</strong> @Model.Client.Id</p>
    <p><strong>Nombre:</strong> @Model.Client.FirstName @Model.Client.LastName</p>
    <p><strong>Correo:</strong> @Model.Client.Email</p>
    <p><strong>Teléfono:</strong> @Model.Client.Phone</p>
    <p><strong>Dirección:</strong> @Model.Client.Address</p>
</div>

<form method="post" class="mt-3">
    <input type="hidden" asp-for="Client.Id" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-page="Index" class="btn btn-secondary">Cancelar</a>
</form>
