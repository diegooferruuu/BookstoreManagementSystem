@page "{id:int}"
@model BookstoreManagementSystem.Pages.Clients.DeleteModel
@{
    ViewData["Title"] = "Eliminar Cliente";
}

<h1>Delete Client</h1>

<div class="alert alert-danger mt-3">
    <h5>Are you sure you want to delete this client?</h5>
</div>

<div class="border rounded p-3 bg-light">
    <p><strong>ID:</strong> @Model.Client.Id</p>
    <p><strong>Name:</strong> @Model.Client.FirstName @Model.Client.LastName</p>
    <p><strong>Email:</strong> @Model.Client.Email</p>
    <p><strong>Phone:</strong> @Model.Client.Phone</p>
    <p><strong>Address:</strong> @Model.Client.Address</p>
</div>

<form method="post" class="mt-3">
    <input type="hidden" asp-for="Client.Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-page="Index" class="btn btn-secondary">Cancel</a>
</form>
