@page
@model BookstoreManagementSystem.Pages.Distributors.CreateModel
@{
    ViewData["Title"] = "Añadir Distribuidor";
}

<div class="card shadow-custom">
    <div class="card-header card-header-blue d-flex align-items-center">
        <h5 class="mb-0"><i class="fas fa-truck me-2"></i>Añadir Distribuidor</h5>
    </div>
    <div class="card-body">
        <form method="post">
            <div class="mb-3">
                <label class="form-label">Nombre</label>
                <input asp-for="Distributor.Name" class="form-control" />
                <span asp-validation-for="Distributor.Name" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="form-label">Correo</label>
                <input asp-for="Distributor.ContactEmail" class="form-control" />
                <span asp-validation-for="Distributor.ContactEmail" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="form-label">Teléfono</label>
                <input asp-for="Distributor.Phone" class="form-control" />
                <span asp-validation-for="Distributor.Phone" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="form-label">Dirección</label>
                <input asp-for="Distributor.Address" class="form-control" />
                <span asp-validation-for="Distributor.Address" class="text-danger"></span>
            </div>
            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-primary"><i class="fas fa-save me-1"></i>Crear</button>
                <a asp-page="Index" class="btn btn-secondary"><i class="fas fa-times me-1"></i>Cancelar</a>
            </div>
        </form>
    </div>
</div>
