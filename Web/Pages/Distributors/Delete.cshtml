@page "{id:int}"
@model BookstoreManagementSystem.Pages.Distributors.DeleteModel
@{
    ViewData["Title"] = "Eliminar Distribuidor";
}

<h1>Delete Distributor</h1>

<div class="alert alert-danger mt-3">
    <h5>Are you sure you want to delete this distributor?</h5>
</div>

<div class="border rounded p-3 bg-light">
    <p><strong>ID:</strong> @Model.Distributor.Id</p>
    <p><strong>Name:</strong> @Model.Distributor.Name</p>
    <p><strong>Email:</strong> @Model.Distributor.ContactEmail</p>
    <p><strong>Phone:</strong> @Model.Distributor.Phone</p>
    <p><strong>Address:</strong> @Model.Distributor.Address</p>
</div>

<form method="post" class="mt-3">
    <input type="hidden" asp-for="Distributor.Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-page="Index" class="btn btn-secondary">Cancel</a>
</form>
