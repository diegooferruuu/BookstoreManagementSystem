@page
@model BookstoreManagementSystem.Pages.Distributors.IndexModel
@{
    ViewData["Title"] = "Distributors";
}

<h1>Distributors</h1>

<table class="table table-striped table-bordered mt-3">
    <thead class="table-dark">
        <tr>
            <th>Nombre</th>
            <th>Correo Electronico</th>
            <th>Celular</th>
            <th>Dirección</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var distributor in Model.Distributors)
        {
            <tr>
                <td>@distributor.Name </td>
                <td>@distributor.ContactEmail</td>
                <td>@distributor.Phone</td>
                <td>@distributor.Address</td>
                <td>
                    <form method="post" asp-page-handler="Edit" asp-antiforgery="true" class="d-inline">
                        <input type="hidden" name="id" value="@distributor.Id" />
                        <button type="submit" class="btn btn-warning btn-sm">Editar</button>
                    </form>
                    <a type="button" class="btn btn-sm btn-danger" data-bs-toggle="modal" data-bs-target="#confirmDeleteDistributorModal" data-distributor-id="@distributor.Id">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-page="Create" class="btn btn-primary mt-3">Add Distributors</a>

<div class="modal fade" id="confirmDeleteDistributorModal" tabindex="-1" aria-labelledby="confirmDeleteDistributorLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form method="post" asp-page-handler="Delete">
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title" id="confirmDeleteDistributorLabel">¿Confirmar eliminación?</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                </div>
                <div class="modal-body">
                    ¿Estás seguro de que deseas eliminar este distribuidor?
                    <input type="hidden" id="deleteDistributorId" name="id" />
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-danger">Sí, eliminar</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                </div>
            </form>
        </div>
    </div>
</div>


<script>
    const distributorModal = document.getElementById('confirmDeleteDistributorModal');
    distributorModal.addEventListener('show.bs.modal', function (event) {
      const button = event.relatedTarget;
      const distributorId = button.getAttribute('data-distributor-id');
      document.getElementById('deleteDistributorId').value = distributorId;
    });
</script>