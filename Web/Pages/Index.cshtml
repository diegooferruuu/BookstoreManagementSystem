@page
@model IndexModel
@{
    ViewData["Title"] = "Inicio";
}

@if (!(User?.Identity?.IsAuthenticated ?? false))
{
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow-custom text-center">
                <div class="card-body p-5">
                    <div class="mb-3">
                        <i class="fas fa-book-open text-primary" style="font-size: 6rem; opacity: .3;"></i>
                    </div>
                    <h1 class="fw-semibold">Librería - Sistema de Administración</h1>
                    <p class="text-muted mb-0">Inicia sesión para ver estadísticas y gestionar el sistema.</p>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow-custom fade-in-up">
                <div class="card-body p-4">
                    <div class="d-flex align-items-center">
                        <i class="fas fa-tachometer-alt text-primary me-3" style="font-size: 2rem;"></i>
                        <div>
                            <h2 class="mb-0">Panel principal</h2>
                            <small class="text-muted">Resumen general del sistema</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-xl-4 col-md-6 mb-3">
            <div class="card stats-card shadow-custom h-100">
                <div class="card-body d-flex align-items-center">
                    <div class="stats-icon me-3 bg-info">
                        <i class="fas fa-users"></i>
                    </div>
                    <div>
                        <div class="text-xs text-uppercase text-info mb-1">Clientes</div>
                        <div class="h4 mb-0">@Model.ClientsCount</div>
                        <small class="text-muted">Activos</small>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-4 col-md-6 mb-3">
            <div class="card stats-card shadow-custom h-100">
                <div class="card-body d-flex align-items-center">
                    <div class="stats-icon me-3">
                        <i class="fas fa-box"></i>
                    </div>
                    <div>
                        <div class="text-xs text-uppercase text-primary mb-1">Productos</div>
                        <div class="h4 mb-0">@Model.ProductsCount</div>
                        <small class="text-muted">Activos</small>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-4 col-md-6 mb-3">
            <div class="card stats-card shadow-custom h-100">
                <div class="card-body d-flex align-items-center">
                    <div class="stats-icon me-3 bg-warning">
                        <i class="fas fa-truck"></i>
                    </div>
                    <div>
                        <div class="text-xs text-uppercase text-warning mb-1">Distribuidores</div>
                        <div class="h4 mb-0">@Model.DistributorsCount</div>
                        <small class="text-muted">Activos</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

