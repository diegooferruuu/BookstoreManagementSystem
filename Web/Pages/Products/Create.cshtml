@page
@model BookstoreManagementSystem.Pages.Products.CreateModel
@{
    ViewData["Title"] = "Añadir Producto";
}

<h1>Añadir Producto</h1>

<form method="post">
    <div class="form-group">
        <label class="form-label">Nombre</label>
        <input asp-for="Product.Name" class="form-control" />
        <span asp-validation-for="Product.Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label class="form-label">Categoria</label>
        <select asp-for="Product.Category_id" class="form-control" asp-items="Model.Categories"></select>
        <span asp-validation-for="Product.Category_id" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label class="form-label">Descripcion</label>
        <input asp-for="Product.Description" class="form-control" />
        <span asp-validation-for="Product.Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label class="form-label">Precio</label>
        <input asp-for="Product.Price" class="form-control" />
        <span asp-validation-for="Product.Price" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label class="form-label">Stock</label>
        <input asp-for="Product.Stock" class="form-control" />
        <span asp-validation-for="Product.Stock" class="text-danger"></span>
        <br />
    </div>

    <button type="submit" class="btn btn-primary">Crear</button>
</form>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}