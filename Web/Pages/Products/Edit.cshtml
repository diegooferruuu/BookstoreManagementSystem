@page
@model BookstoreManagementSystem.Pages.Products.EditModel
@{
    ViewData["Title"] = "Editar Producto";
}

<h1>Editar Producto</h1>

<form method="post">
    <input asp-for="Product.Id" type="hidden" />
    <input asp-for="Product.CreatedAt" type="hidden" />
    
    <div class="mb-3">
        <label class="form-label">Nombre</label>
        <input asp-for="Product.Name" class="form-control" required />
        <span asp-validation-for="Product.Name" class="text-danger"></span>
    </div>
    
    <div class="mb-3">
        <label class="form-label">Descripcion</label>
        <textarea asp-for="Product.Description" class="form-control" rows="3"></textarea>
        <span asp-validation-for="Product.Description" class="text-danger"></span>
    </div>
    
    <div class="mb-3">
        <label class="form-label">Categoria</label>
        <select asp-for="Product.Category_id" asp-items="Model.Categories" class="form-select" required>
        </select>
        <span asp-validation-for="Product.Category_id" class="text-danger"></span>
    </div>
    
    <div class="mb-3">
        <label class="form-label">Precio</label>
        <input asp-for="Product.Price" class="form-control" type="number" step="0.01" min="0" required />
        <span asp-validation-for="Product.Price" class="text-danger"></span>
    </div>
    
    <div class="mb-3">
        <label class="form-label">Stock</label>
        <input asp-for="Product.Stock" class="form-control" type="number" min="0" required />
        <span asp-validation-for="Product.Stock" class="text-danger"></span>
    </div>
    
    <button type="submit" class="btn btn-success">Actualizar</button>
    <a asp-page="Index" class="btn btn-secondary">Cancelar</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}